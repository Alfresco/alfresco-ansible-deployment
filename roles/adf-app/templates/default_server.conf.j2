server {
        listen {{ adfapp_port }};
        client_max_body_size 0;

        set  $allowOriginSite *;
        proxy_pass_request_headers on;
        proxy_pass_header Set-Cookie;

        location / {
              root {{ nginx_default_vhost_docroot }}/{{ adfapp_context }}/;
            index index.html index.htm;
        }
    }
