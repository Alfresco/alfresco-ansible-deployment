server {
        listen {{ adf_app_port }};
        client_max_body_size 0;

        set  $allowOriginSite *;
        proxy_pass_request_headers on;
        proxy_pass_header Set-Cookie;

        location / {
              root {{ nginx_default_vhost_docroot }}/{{ adf_app_name }}/;
            index index.html index.htm;
        }
    }
