#!/bin/bash
if [ $(id -u) -eq 0 ]; then
    echo "This script must not be executed by root"
    exit 1
fi

exec ${JAVA_HOME}/bin/java ${JAVA_OPTS} \
	-jar ${ATS_HOME}/{{ transform.artifact_name }}-{{ transform.version }}.jar \
	--spring.config.additional-location=optional:tengine-mtls.properties \
	> {{ logs_folder }}/ats-ate-aio.log
